<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.yianke.pet.ui.activity.MainActivity">


    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="168px"/>

    <!--分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="166px"
        android:background="#c8c8c8"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="166px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <!--社区-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/parent_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="68px"
                android:layout_height="58px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_show"/>

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21px"
                android:text="社区"
                android:textColor="#999999"
                android:textSize="40px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <!--资讯-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/parent_house"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_house"
                android:layout_width="59px"
                android:layout_height="58px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_news"/>

            <TextView
                android:id="@+id/tv_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21px"
                android:text="资讯"
                android:textColor="#999999"
                android:textSize="40px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <!--商城-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/parent_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_buy"
                android:layout_width="68px"
                android:layout_height="59px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_bottom_share"/>

            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21px"
                android:text="商城"
                android:textColor="#999999"
                android:textSize="40px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <!--服务-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/parent_service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_service"
                android:layout_width="75px"
                android:layout_height="58px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_service"/>

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21px"
                android:text="服务"
                android:textColor="#999999"
                android:textSize="40px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <!--我的-->
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/parent_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_mine"
                android:layout_width="60px"
                android:layout_height="60px"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_me"/>

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21px"
                android:text="我的"
                android:textColor="#999999"
                android:textSize="40px"/>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>
