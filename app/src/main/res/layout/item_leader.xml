<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="251px"
        android:textColor="@color/colorPet"
        android:textSize="76px" />

    <TextView
        android:id="@+id/item_descript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="73px"
        android:textColor="@color/color9"
        android:textSize="46px" />


    <ImageView
        android:id="@+id/item_view"
        android:layout_width="840px"
        android:layout_height="960px"
        android:layout_below="@id/item_descript"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="300px"
        android:layout_marginRight="300px"
        android:layout_marginTop="50px"
        android:scaleType="centerCrop" />


    <com.yianke.pet.ui.custom.LeaderView
        android:id="@+id/item_image"
        android:layout_width="840px"
        android:layout_height="960px"
        android:layout_below="@id/item_descript"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="300px"
        android:layout_marginRight="300px"
        android:layout_marginTop="50px"
        android:scaleType="centerCrop" />

</com.zhy.autolayout.AutoRelativeLayout>